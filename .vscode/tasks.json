{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build project",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-Wall",
                "-o",
                "${workspaceFolder}/.vscode/treedecomp",
                "${workspaceFolder}/src/graph.c",
                "${workspaceFolder}/src/treedecomp.c"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task modified."
        }
    ],
    "version": "2.0.0"
}